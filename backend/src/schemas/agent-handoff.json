{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AgentHandoffContext",
    "description": "Shared state object for handoff between screening and receptionist agents",
    "type": "object",
    "required": [
        "sessionId",
        "tenantId",
        "patient",
        "status"
    ],
    "properties": {
        "sessionId": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the interaction session"
        },
        "tenantId": {
            "type": "string",
            "format": "uuid",
            "description": "Clinic Organization ID"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Time of handoff initiation"
        },
        "patient": {
            "type": "object",
            "required": [
                "phoneNumber"
            ],
            "properties": {
                "phoneNumber": {
                    "type": "string",
                    "pattern": "^\\+[1-9]\\d{1,14}$"
                },
                "name": {
                    "type": "string"
                },
                "isNewPatient": {
                    "type": "boolean"
                },
                "dateOfBirth": {
                    "type": "string",
                    "format": "date"
                }
            }
        },
        "intent": {
            "type": "object",
            "properties": {
                "serviceCategory": {
                    "type": "string",
                    "enum": [
                        "consultation",
                        "follow_up",
                        "procedure",
                        "inquiry"
                    ]
                },
                "specificInterest": {
                    "type": "string",
                    "description": "e.g., 'Botox', 'Lip Filler'"
                },
                "urgency": {
                    "type": "string",
                    "enum": [
                        "low",
                        "medium",
                        "high"
                    ]
                }
            }
        },
        "status": {
            "type": "string",
            "enum": [
                "screening_complete",
                "slot_held",
                "otp_sent",
                "verified",
                "handoff_ready"
            ],
            "description": "Current state of the lead in the funnel"
        },
        "scheduling": {
            "type": "object",
            "properties": {
                "heldSlotId": {
                    "type": "string",
                    "format": "uuid"
                },
                "proposedTime": {
                    "type": "string",
                    "format": "date-time"
                },
                "slotExpiresAt": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "verification": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "enum": [
                        "pending",
                        "verified",
                        "failed"
                    ]
                },
                "method": {
                    "type": "string",
                    "const": "sms_otp"
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "conversationSummary": {
            "type": "string",
            "description": "Concise summary of what Sarah discussed for Voxan's context"
        }
    }
}