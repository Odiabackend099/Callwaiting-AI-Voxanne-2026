[
    {
        "type": "server",
        "name": "check_availability",
        "description": "Check available appointment slots for tenant. Returns 30min slots respecting business hours and buffer times.",
        "server": {
            "url": "https://callwaitingai.dev/api/vapi/tools/calendar/check",
            "method": "POST"
        },
        "parameters": {
            "type": "object",
            "properties": {
                "tenantId": {
                    "type": "string",
                    "description": "Organization UUID"
                },
                "date": {
                    "type": "string",
                    "format": "date",
                    "description": "YYYY-MM-DD"
                },
                "serviceType": {
                    "type": "string",
                    "enum": [
                        "consultation",
                        "botox",
                        "filler"
                    ],
                    "description": "Medical service"
                }
            },
            "required": [
                "tenantId",
                "date"
            ]
        },
        "messages": {
            "requestStart": [
                "Let me check our availability...",
                "Looking up the schedule..."
            ],
            "requestComplete": [
                "Here are the available times:",
                "I found these openings:"
            ]
        }
    },
    {
        "type": "server",
        "name": "reserve_slot",
        "description": "Hold appointment slot for 5 minutes during call. Patient must confirm before expiry.",
        "server": {
            "url": "https://callwaitingai.dev/api/vapi/tools/calendar/reserve",
            "method": "POST"
        },
        "parameters": {
            "type": "object",
            "properties": {
                "tenantId": {
                    "type": "string"
                },
                "slotId": {
                    "type": "string"
                },
                "patientPhone": {
                    "type": "string"
                },
                "patientName": {
                    "type": "string"
                }
            },
            "required": [
                "tenantId",
                "slotId",
                "patientPhone"
            ]
        }
    },
    {
        "type": "server",
        "name": "send_sms_reminder",
        "description": "Send appointment confirmation/reminder SMS with reschedule link. 10DLC compliant.",
        "server": {
            "url": "https://callwaitingai.dev/api/vapi/tools/sms/send",
            "method": "POST"
        },
        "parameters": {
            "type": "object",
            "properties": {
                "tenantId": {
                    "type": "string"
                },
                "phoneNumber": {
                    "type": "string"
                },
                "appointmentId": {
                    "type": "string"
                },
                "messageType": {
                    "type": "string",
                    "enum": [
                        "confirmation",
                        "reminder",
                        "otp"
                    ]
                }
            }
        }
    }
]