# Backend environment variables (DO NOT commit real secrets)
# Copy to backend/.env and fill in values for local development.

# Server
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Environment (CRITICAL: Defaults to production if not set)
# Set to 'development' ONLY for local development with dev mode bypasses
NODE_ENV=production

# Supabase (REQUIRED)
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# Optional timeouts
SUPABASE_FETCH_TIMEOUT_MS=8000

# AI/LLM (REQUIRED for KB and RAG features)
# OpenAI API key for embeddings and knowledge base
OPENAI_API_KEY=

# Error Monitoring (Optional but recommended for production)
# Get DSN from sentry.io
SENTRY_DSN=

# Integrations (REQUIRED if using call recording features)
VAPI_API_KEY=your_vapi_api_key_here
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Recording configuration (optional - uses defaults if not specified)
RECORDING_URL_EXPIRY_SECONDS=3600
RECORDING_DOWNLOAD_TIMEOUT_MS=60000
MAX_RECORDING_SIZE_MB=500

# Development Mode (DANGEROUS - only enable for local development)
# Set BOTH of these to enable dev-mode auth bypasses
NODE_ENV=development
ALLOW_DEV_WS_BYPASS=true
DEV_USER_ID=dev-user
DEV_USER_EMAIL=dev@local
